@require 'nib'

global-reset()
reset-html5()

large-box-size = 500px
small-box-size = 250px

body
	background-color: #0ead9a

h1
	color: #d6f4f0
	font-size: 45px
	font-family: 'Roboto'
	font-weight: 500
	text-align: center
	margin: 20px

#loading
	color: #ffcc80
	font-size: 20px
	font-family: 'Roboto'
	text-align: center
	margin: 20px

.crop
	width: large-box-size
	height: large-box-size
	overflow: hidden
	position: relative

	// Prevent clicking & scrolling on iframe
	&:after
		content: ''
		absolute: left 0 top 0
		right: 0
		bottom: 0
		cursor: zoom-in

	iframe
		will-change: transform
		transition: transform .3s ease

.difflist
	margin: 30px
	margin-top: 0px
	margin-bottom: 60px
	text-align: center

.diff
	background-color: rgba(255, 255, 255, 0.5)
	width: large-box-size
	height: large-box-size
	margin: 40px
	margin-top: 50px
	display: inline-block
	border: 10px solid rgba(255, 255, 255, 0.6)

.url
	color: rgba(255, 255, 255, 0.7)
	font-size: 20px
	font-family: 'Roboto'
	font-weight: 400
	text-align: center
	margin: 20px

// Position the zoomed iframe
.is-zoomed
	&.diff
		padding-top: large-box-size
		height: 0;

	.crop
		fixed left 0 top 0
		right: 0
		bottom: 0
		width: auto
		height: auto
		z-index: 1

		&:after
			z-index: 1
			cursor: move

@media (max-width: 1280px)
	.diff, .crop
		width: small-box-size
		height: small-box-size

	.diff.is-zoomed
		padding-top: small-box-size

#fakecrop
	display: none


@keyframes slide
	0%
		margin-left: -120px
	100%
		margin-left: 120px

